<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\build\import\VisualStudio.props" />
  
  <PropertyGroup>
    <!-- VS Insertion -->
    <VisualStudioInsertionComponent>Microsoft.VisualStudio.ProjectSystem.Managed</VisualStudioInsertionComponent>
  </PropertyGroup>
  <ItemGroup>
    <!-- Depend on projects producing XAML rules included in this Willow package -->
    <ProjectReference Include="..\..\src\Microsoft.VisualStudio.ProjectSystem.Managed\Microsoft.VisualStudio.ProjectSystem.Managed.csproj" />
  </ItemGroup>
  <ItemGroup>
    <SwrProperty Include="Version=$(VsixVersion)" />
    <SwrProperty Include="VisualStudioXamlRulesDir=$(VisualStudioXamlRulesDir)" />
  </ItemGroup>
  <ItemGroup>
    <SwrFile Include="*.swr" />
  </ItemGroup>

  <Target Name="Build" DependsOnTargets="ResolveProjectReferences">
    <MakeDir Directories="$(IntermediateOutputPath)" ContinueOnError="True" />
  </Target>
  <!-- Adds the appropriate vsix files for signing. -->
  <!-- <Target Name="AddVsixForSigning" BeforeTargets="SignFiles"> -->
  <!-- <Target Name="AddVsixForSigning" AfterTargets="CreateVsixContainer"> -->
  <!-- <Target Name="AddVsixForSigning" AfterTargets="FinalizeInsertionVsixFiles"> -->
  <!-- <Target Name="AddVsixForSigning" DependsOnTargets="SwixBuild"> -->
  <Target Name="AddVsixForSigning" DependsOnTargets="SwixBuild" BeforeTargets="SignFiles">
    <Message Text="VisualStudioSetupOutputPath: $(VisualStudioSetupOutputPath)" />
    <Message Text="VisualStudioSetupInsertionPath: $(VisualStudioSetupInsertionPath)" />
    <Message Text="AssemblyName: $(AssemblyName)" />
    <Message Text="OutDir: $(OutDir)" />
    <Message Text="ArtifactsObjDir: $(ArtifactsObjDir)" />

    <Copy SourceFiles="$(VisualStudioSetupInsertionPath)$(AssemblyName).vsix" DestinationFolder="$(OutDir)" />
    <ItemGroup>
      <!-- <FilesToSign Include="$(VisualStudioSetupInsertionPath)$(AssemblyName).vsix">
        <Authenticode>VsixSHA2</Authenticode>
      </FilesToSign> -->
      <FilesToSign Include="$(OutDir)$(AssemblyName).vsix">
        <Authenticode>VsixSHA2</Authenticode>
      </FilesToSign>
    </ItemGroup>
  </Target>

  <Target Name="CopyVsixAfterSigning" DependsOnTargets="SignFiles">
    <Message Text="VisualStudioSetupOutputPath: $(VisualStudioSetupOutputPath)" />
    <Message Text="VisualStudioSetupInsertionPath: $(VisualStudioSetupInsertionPath)" />
    <Message Text="AssemblyName: $(AssemblyName)" />
    <Message Text="OutDir: $(OutDir)" />
    <Message Text="ArtifactsObjDir: $(ArtifactsObjDir)" />

    <Copy SourceFiles="$(OutDir)$(AssemblyName).vsix" DestinationFolder="$(VisualStudioSetupInsertionPath)" />
  </Target>
</Project>